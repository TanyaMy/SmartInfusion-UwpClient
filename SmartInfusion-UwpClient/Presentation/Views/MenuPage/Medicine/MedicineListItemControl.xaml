<UserControl
    x:Class="SmartInfusion_UwpClient.Presentation.Views.MenuPage.Medicine.MedicineListItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartInfusion_UwpClient.Presentation.Views.MenuPage.Medicine"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <RelativePanel Padding="15">
        <controls:ImageEx x:Name="MedicineImage"
                          RelativePanel.AlignLeftWithPanel="True"
                          RelativePanel.AlignTopWithPanel="True"
                          RelativePanel.AlignBottomWithPanel="True"
                          Width="50" Padding="20"
                          Stretch="Uniform"
                          Source="Assets/medicine.png">
        </controls:ImageEx>

        <TextBlock x:Name="MedicineTitleTextBlock"
                   RelativePanel.RightOf="MedicineImage"
                   RelativePanel.AlignTopWithPanel="True"
                   Padding="15,10"
                   FontSize="20"
                   FontWeight="Bold"
                   FontStyle="Italic"
                   Text="{Binding Title}"/>

    </RelativePanel>
</UserControl>
